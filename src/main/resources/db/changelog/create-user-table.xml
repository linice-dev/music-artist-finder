<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="create-user-table" author="lina">
        <createTable schemaName="music_artist_finder" tableName="user">
            <column name="user_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="favourite_artist_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence schemaName="music_artist_finder" sequenceName="user_id_sequence"/>

        <rollback>
            <dropSequence schemaName="music_artist_finder" sequenceName="user_id_sequence"/>
            <dropTable schemaName="music_artist_finder" tableName="user"/>
        </rollback>
    </changeSet>
</databaseChangeLog>